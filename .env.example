# ===========================================
# CTrack Environment Variables
# ===========================================
# Скопируйте этот файл в .env и заполните значения

# Django
# -------------------------------------------
DJANGO_SETTINGS_MODULE=ctrack.settings.development
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database (PostgreSQL)
# -------------------------------------------
DATABASE_URL=postgres://ctrack:ctrack_password@localhost:5432/ctrack

# Для Docker используйте:
# DATABASE_URL=postgres://ctrack:ctrack_password@db:5432/ctrack

# Redis
# -------------------------------------------
REDIS_URL=redis://localhost:6379/0

# Для Docker используйте:
# REDIS_URL=redis://redis:6379/0

# Celery
# -------------------------------------------
CELERY_BROKER_URL=redis://localhost:6379/1

# Для Docker используйте:
# CELERY_BROKER_URL=redis://redis:6379/1

# JWT Authentication
# -------------------------------------------
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
# -------------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Frontend
# -------------------------------------------
VITE_API_URL=http://localhost:8000

# Email (для production)
# -------------------------------------------
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-email-password

# Sentry (для production)
# -------------------------------------------
# SENTRY_DSN=https://your-sentry-dsn
